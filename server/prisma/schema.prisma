datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  event     Event?   @relation(name: "event", fields: [eventId], references: [id])
  eventId   String?
  events    Event?   @relation(name: "events")
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Event {
  cover        Float?
  createdAt    DateTime @default(now())
  date         DateTime
  description String? @Description of the event
  id           String   @id @default(cuid())
  name         String?
  owner        User?    @relation(name: "events", fields: [owner], references: [id])
  owner        String?  @unique
  participants User[]   @relation(name: "event")
  updatedAt    DateTime @updatedAt
  venue        String
}
